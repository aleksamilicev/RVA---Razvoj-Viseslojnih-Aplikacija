<Window x:Class="RVA.Client.Views.RaftingAddEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:enums="clr-namespace:RVA.Shared.Enums;assembly=RVA.Shared"
        xmlns:local="clr-namespace:RVA.Client.Converters"
        Title="{Binding WindowTitle}" 
        Height="700" Width="600" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:BoolToSaveTextConverter x:Key="BoolToSaveTextConverter"/>

        <!-- Error text style -->
        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Input field style -->
        <Style x:Key="InputFieldStyle" TargetType="Control">
            <Setter Property="Margin" Value="0,0,0,3"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="{Binding WindowTitle}" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Basic Information -->
                <GroupBox Header="Basic Information" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Name -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name*:" VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="0" Grid.Column="1">
                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource InputFieldStyle}"/>
                            <TextBlock Text="{Binding NameError}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding NameError, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>

                        <!-- Description -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:" VerticalAlignment="Top" Margin="0,5,0,0"/>
                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Style="{StaticResource InputFieldStyle}"/>
                            <TextBlock Text="{Binding DescriptionError}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding DescriptionError, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>

                        <!-- Weather Conditions -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Weather:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                                 Text="{Binding WeatherConditions, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputFieldStyle}"/>

                        <!-- State -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="State:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" 
                                  SelectedItem="{Binding CurrentState}" 
                                  ItemsSource="{Binding RaftingStateValues}"
                                  Style="{StaticResource InputFieldStyle}"/>
                    </Grid>
                </GroupBox>

                <!-- Time and Duration -->
                <GroupBox Header="Schedule" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Start Time*:" VerticalAlignment="Center"/>
                        <DatePicker Grid.Row="0" Grid.Column="1" 
                                    SelectedDate="{Binding StartTime}" 
                                    Style="{StaticResource InputFieldStyle}"
                                    Margin="0,0,5,3"/>

                        <TextBlock Grid.Row="0" Grid.Column="2" Text="End Time*:" VerticalAlignment="Center"/>
                        <DatePicker Grid.Row="0" Grid.Column="3" 
                                    SelectedDate="{Binding EndTime}"
                                    Style="{StaticResource InputFieldStyle}"
                                    Margin="5,0,0,3"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                   Text="{Binding Duration, StringFormat='Duration: {0:hh\\:mm}'}" 
                                   FontWeight="Bold" VerticalAlignment="Center"/>

                        <StackPanel Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2">
                            <TextBlock Text="{Binding TimeError}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding TimeError, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Physical Properties -->
                <GroupBox Header="Physical Properties" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Distance -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Distance (km)*:" VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="0" Grid.Column="1">
                            <TextBox Text="{Binding Distance, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource InputFieldStyle}"/>
                            <TextBlock Text="{Binding DistanceError}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding DistanceError, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>

                        <!-- Current Speed -->
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Speed (km/h):" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="3" 
                                 Text="{Binding CurrentSpeedKmh, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputFieldStyle}"/>

                        <!-- Current Intensity -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Intensity:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" 
                                  SelectedItem="{Binding CurrentIntensity}" 
                                  ItemsSource="{Binding IntensityValues}"
                                  Style="{StaticResource InputFieldStyle}"/>
                    </Grid>
                </GroupBox>

                <!-- Capacity and Participants -->
                <GroupBox Header="Capacity" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Capacity*:" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1">
                            <TextBox Text="{Binding Capacity, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource InputFieldStyle}"/>
                            <TextBlock Text="{Binding CapacityError}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding CapacityError, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2" Text="Max Participants:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="3" 
                                 Text="{Binding MaxParticipants, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputFieldStyle}"/>
                    </Grid>
                </GroupBox>

                <!-- Pricing and Guide -->
                <GroupBox Header="Pricing and Guide" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Price/Person*:" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1">
                            <TextBox Text="{Binding PricePerPerson, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource InputFieldStyle}"/>
                            <TextBlock Text="{Binding PriceError}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding PriceError, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2" Text="Guide ID:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="3" 
                                 Text="{Binding GuideId, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputFieldStyle}"/>
                    </Grid>
                </GroupBox>

                <!-- Locations -->
                <GroupBox Header="Locations" Margin="0,0,0,10" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Start Location*:" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1">
                            <TextBox Text="{Binding StartLocationId, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource InputFieldStyle}"/>
                            <TextBlock Text="{Binding LocationError}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding LocationError, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2" Text="End Location*:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="3" 
                                 Text="{Binding EndLocationId, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputFieldStyle}"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Message -->
        <TextBlock Grid.Row="2" Text="{Binding StatusMessage}" 
                   HorizontalAlignment="Center" 
                   Margin="0,10" FontWeight="Bold"/>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Loading Indicator -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <ProgressBar Width="100" Height="15" IsIndeterminate="{Binding IsLoading}" 
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                            Margin="0,0,10,0"/>
                <TextBlock Text="Processing..." 
                          Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                          VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Reset Button -->
            <Button Grid.Column="1" Content="Reset" Command="{Binding ResetCommand}" 
                    Margin="0,0,10,0" Padding="20,8" MinWidth="80"/>

            <!-- Cancel Button -->
            <Button Grid.Column="2" Content="Cancel" Click="CancelButton_Click"
                    Margin="0,0,10,0" Padding="20,8" MinWidth="80"/>

            <!-- Save Button -->
            <Button Grid.Column="3" Content="{Binding IsEditMode, Converter={StaticResource BoolToSaveTextConverter}}" 
                    Command="{Binding SaveCommand}" 
                    Background="#4CAF50" Foreground="White" 
                    Padding="20,8" MinWidth="80" FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>