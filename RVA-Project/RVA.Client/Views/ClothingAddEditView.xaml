<Window x:Class="RVA.Client.Views.ClothingAddEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:enums="clr-namespace:RVA.Shared.Enums;assembly=RVA.Shared"
        xmlns:local="clr-namespace:RVA.Client.Converters"
        Title="{Binding WindowTitle}" 
        Height="650" Width="500" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:BoolToSaveTextConverter x:Key="BoolToSaveTextConverter"/>

        <!-- Error text style -->
        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Input field style -->
        <Style x:Key="InputFieldStyle" TargetType="Control">
            <Setter Property="Margin" Value="0,0,0,3"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="{Binding WindowTitle}" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Basic Information -->
                <GroupBox Header="Basic Information" Margin="0,0,0,15" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Name -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name*:" VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="0" Grid.Column="1">
                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource InputFieldStyle}"/>
                            <TextBlock Text="{Binding NameError}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding NameError, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>

                        <!-- Type -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" 
                                  SelectedItem="{Binding Type}" 
                                  ItemsSource="{Binding ClothingTypes}"
                                  Style="{StaticResource InputFieldStyle}"/>

                        <!-- Material -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Material:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" 
                                  SelectedItem="{Binding Material}" 
                                  ItemsSource="{Binding MaterialTypes}"
                                  Style="{StaticResource InputFieldStyle}"/>

                        <!-- Size -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Size*:" VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="3" Grid.Column="1">
                            <TextBox Text="{Binding Size, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource InputFieldStyle}"/>
                            <TextBlock Text="{Binding SizeError}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding SizeError, Converter={StaticResource BoolToVis}}"/>
                            <TextBlock Text="Range: 1-60" FontSize="10" Foreground="Gray"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Physical Properties -->
                <GroupBox Header="Physical Properties" Margin="0,0,0,15" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Brand -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Brand:" VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="0" Grid.Column="1">
                            <TextBox Text="{Binding Brand, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource InputFieldStyle}"/>
                            <TextBlock Text="{Binding BrandError}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding BrandError, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>

                        <!-- Color -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Color:" VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <ComboBox Text="{Binding Color, UpdateSourceTrigger=PropertyChanged}" 
                                      ItemsSource="{Binding ColorOptions}"
                                      IsEditable="True"
                                      Style="{StaticResource InputFieldStyle}"/>
                            <TextBlock Text="{Binding ColorError}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding ColorError, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>

                        <!-- Waterproof -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Waterproof:" VerticalAlignment="Center"/>
                        <CheckBox Grid.Row="2" Grid.Column="1" 
                                  IsChecked="{Binding IsWaterproof}" 
                                  Content="Is Waterproof"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </GroupBox>

                <!-- Status and Condition -->
                <GroupBox Header="Status and Condition" Margin="0,0,0,15" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Available -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Available:" VerticalAlignment="Center"/>
                        <CheckBox Grid.Row="0" Grid.Column="1" 
                                  IsChecked="{Binding IsAvailable}" 
                                  Content="Is Available for Use"
                                  VerticalAlignment="Center"/>

                        <!-- Condition -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Condition*:" VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <ComboBox Text="{Binding Condition, UpdateSourceTrigger=PropertyChanged}" 
                                      ItemsSource="{Binding ConditionOptions}"
                                      IsEditable="True"
                                      Style="{StaticResource InputFieldStyle}"/>
                            <TextBlock Text="{Binding ConditionError}" 
                                       Style="{StaticResource ErrorTextStyle}"
                                       Visibility="{Binding ConditionError, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>

                        <!-- Last Cleaned -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Last Cleaned:" VerticalAlignment="Center"/>
                        <DatePicker Grid.Row="2" Grid.Column="1" 
                                    SelectedDate="{Binding LastCleaned}" 
                                    Style="{StaticResource InputFieldStyle}"/>
                    </Grid>
                </GroupBox>

                <!-- Size Reference Helper -->
                <GroupBox Header="Size Reference" Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Common Size Guidelines:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Wetsuit Sizes:" FontWeight="Medium"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Helmet Sizes:" FontWeight="Medium"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="XS: 38-40, S: 42-44"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="S: 54-56, M: 56-58"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="M: 46-48, L: 50-52"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="L: 58-60, XL: 60+"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="XL: 54-56, XXL: 58+"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="Boot sizes: 36-48"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Message -->
        <TextBlock Grid.Row="2" Text="{Binding StatusMessage}" 
                   HorizontalAlignment="Center" 
                   Margin="0,10" FontWeight="Bold"/>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Loading Indicator -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <ProgressBar Width="100" Height="15" IsIndeterminate="{Binding IsLoading}" 
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                            Margin="0,0,10,0"/>
                <TextBlock Text="Processing..." 
                          Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                          VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Reset Button -->
            <Button Grid.Column="1" Content="Reset" Command="{Binding ResetCommand}" 
                    Margin="0,0,10,0" Padding="20,8" MinWidth="80"/>

            <!-- Cancel Button -->
            <Button Grid.Column="2" Content="Cancel" Click="CancelButton_Click"
                    Margin="0,0,10,0" Padding="20,8" MinWidth="80"/>

            <!-- Save Button -->
            <Button Grid.Column="3" Content="{Binding IsEditMode, Converter={StaticResource BoolToSaveTextConverter}}" 
                    Command="{Binding SaveCommand}" 
                    Background="#4CAF50" Foreground="White" 
                    Padding="20,8" MinWidth="80" FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>